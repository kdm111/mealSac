<style>
  .restaurantContainer {
  display: flex;
  padding: 10px 0;
}

.restaurantImg {
  width: 170px;
  height: 170px;
  flex-grow: 0;
  background-color: #89d83f;
  border-radius: 10px;
}

.restaurantInfo {
  padding-left: 5px;
  padding-right: 5px;
  width: auto;
  flex-grow: 1;
  z-index: 1;
}

.restaurantInfo > div:first-child {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.restaurantInfo > div:nth-child(4) {
  margin-top: 40px;
}

.restaurantInfo > div:last-child > * {
  display: inline-block;
}

.restaurantInfo h3 {
  font-size: 1.2rem;
}
.restaurantInfo .address {
  font-size: 0.7rem;
}
.heart {
  width: 23px;
  height: 25px;
}

.rating,
.comment {
  width: 18px;
  height: 18px;
}

.restaurantInfo > div p {
  font-size: 0.8rem;
}
</style>

<article class="restaurantContainer">
  <img src="../../static/img/food.jpeg" alt="<%= restaurant.restaurantName %> 이미지" class="restaurantImg" />
  <div class="restaurantInfo">
    <div>
      <h3 class="restaurantName"><%= restaurant.restaurantName %></h3>
      <img src="../../static/img/heart.png" alt="찜 아이콘" class="heart" />
    </div>
    <p class="type"><%= restaurant.restaurantStyle %></p>
    <p class="address"><%= restaurant.restaurantAddress %></p>
    <div>
      <img src="../../static/img/star.png" alt="평점 아이콘" class="rating" />
      <p class="rate"><%= restaurant.restaurantRate %></p>
      <img src="../../static/img/speech-bubble.png" alt="댓글 아이콘" class="comment" />
      <p class="review"><%= restaurant.restaurantComment %></p>
    </div>
  </div>
</article>